<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sep.billardapp">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BillardApp">
        <activity android:name=".TableActivity"></activity>
        <activity android:name=".UserProfileActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BreakSpeedActivity" />
        <activity android:name=".example.billard_app_02.CameraActivity" />
        <activity android:name=".MainMenuActivity">
        </activity>
        <activity android:name=".AverageTimeActivity" />
        <activity android:name=".ComparisonActivity" />
        <activity android:name=".StatisticsActivity" />
        <activity android:name=".ChartWinsActivity" />
        <activity android:name=".PostGameActivity"
            android:windowSoftInputMode="stateVisible|adjustPan"/>
    </application>

</manifest>